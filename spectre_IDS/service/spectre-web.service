[Unit]
Description=Spectre IDS Web Interface
After=network.target spectre-analyzer.service

[Service]
Type=simple
WorkingDirectory=/opt/spectre/webapp
ExecStart=/opt/spectre/venv/bin/python /opt/spectre/webapp/app.py
Restart=always
RestartSec=5
User=root
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
